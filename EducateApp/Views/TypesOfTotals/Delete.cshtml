@model EducateApp.Models.Data.TypeOfTotal

@{
    ViewData["Title"] = "Удаление - Виды промежуточной аттестации";
}

<h1>Удаление</h1>

<h3>Вы уверены, что хотите удалить запись?</h3>
<div>
    <h4>Виды промежуточной аттестации</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CertificateName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CertificateName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Id)
